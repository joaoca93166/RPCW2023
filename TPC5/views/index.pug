extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Task List
    form.w3-container.w3-mobile(method="POST")
      fieldset.w3-margin
        legend Add task
        label Description:
        input.w3-input.w3-round(type="text" name="description" required)
        label Author:
        input.w3-input.w3-round(type="text" name="author" required)
        label Date:
        input.w3-input.w3-round(type="date" name="dateDued" required)
        input(type="hidden" name="id" value=slist.length+1)
      button.w3-btn.w3-blue.w3-mb-2.w3-margin(type="submit") Add new Task
                
    .w3-row-padding.w3-mobile
      .w3-half
        h2 To Do
        table.w3-table.w3-bordered.w3-striped-w3-border.w3-hoverable.w3-white
          thead 
            tr.w3-blue
              th Description
              th Author
              th Due Date
              th
          each t in slist
            if t.done == false
              tr
                td=t.description
                td=t.author
                td=t.dateDued
                td
                  form(method="POST")
                    input(type="hidden" name="description" value="#{t.description}")
                    input(type="hidden" name="author" value="#{t.author}")
                    input(type="hidden" name="dateDued" value="#{t.dateDued}")
                    input(type="hidden" name="id" value="#{t.id}")
                    input(type="hidden" name="done" value="#{t.done}")
                    button.w3-btn.w3-blue.w3-mb-2.w3-margin(type="submit") Mark as Done
      
      .w3-half
        h2 Resolved
          table.w3-table.w3-bordered.w3-striped.w3-border.w3-hoverable.w3-white
            thead
              tr.w3-blue
                th Description
                th Author
                th Due Date
            each t in slist
              if t.done == true
                tr
                td=t.description
                td=t.author
                td=t.dateDued
    
    footer.w3-container.w3-teal
      h5 Generated by RPCW2023 in #{d}